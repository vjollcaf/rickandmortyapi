{
	"name": "nuxt-app",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"task:eslint:fix": "eslint --ext \".ts,.vue\" --ignore-path .gitignore .",
		"task:prettier:fix": "prettier --write .",
