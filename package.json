		"nuxt": "^3.7.3"
	},
	"dependencies": {
		"@nuxt/image": "^1.0.0-rc.2",
		"@nuxtjs/eslint-config-typescript": "^12.1.0",
		"@pinia/nuxt": "^0.4.11",
		"@trivago/prettier-plugin-sort-imports": "^4.2.0",
		"@typescript-eslint/parser": "^6.7.0",
		"axios": "^1.5.0",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"pinia": "^2.1.6",
		"prettier": "^3.0.3",
		"sass": "^1.67.0",
		"typescript": "^5.2.2"
	}, 
	"lint-staged": {
		"*.{js,jsx,ts,tsx,vue}": [
